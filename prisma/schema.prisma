generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shop {
  id        Int      @id @default(autoincrement())
  name      String
  description String
  products  Product[]
}

// Define the Product model
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float    
  shop        Shop     @relation(fields: [shopId], references: [id])
  shopId      Int
}
